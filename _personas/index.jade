h1 #{ title }
!= partial("_partials/_intro")

for user, slug in public._data
    .frame
        .col-25
            img(src="img/#{ user.imgsrc }" 
                alt="Bundl user profile picture"
                class="persona-image")
        .col-75
            .cuffs
                h2 #{ slug }
                if user.type === "potential learner"
                    img(src="img/mortarboard.svg.png"
                        alt="user type logo"
                        class="user-type-img")
                else if user.type === "actual learner"
                    img(src="img/mortarboard.svg.png"
                        alt="user type logo"
                        class="user-type-img")
                else if user.type === "actual client"
                    img(src="img/briefcase.svg"
                        alt="user type logo"
                        class="user-type-img")
                else if user.type === "potential client"
                    img(src="img/briefcase.svg"
                        alt="user type logo"
                        class="user-type-img")

                p.key.user User Group:&nbsp
                    span #{ user.group }
                p.key.user User Type:&nbsp
                    span #{ user.type }

            .col-50
                .cuffs
                    p.title Demographics
                    p.key Age:&nbsp
                        span #{ user.age }
                    p.key Occupation:&nbsp
                        span #{ user.occupation }
                    p.key Education:&nbsp
                        span #{ user.education }
                    p.key Hardware:&nbsp
                        span #{ user.hardware }

            .col-50
                .cuffs    
                    p.title Tech Comforts
                    p.key Software:&nbsp
                        span #{ user.software }
                    p.key Browser:&nbsp
                        span #{ user.browser }
                    p.key Web:&nbsp
                        span #{ user.comforts.web }
                    p.key Attitude:&nbsp
                        span #{ user.comforts.attitude }
                
        .col-100
            .cuffs
                p.title Bio / A day in the life
                p.body #{ user.bio }
            .cuffs    
                p.title Pain Points
                    each val in user.pain
                        p.body= val
            .cuffs
                p.title Goals and Motivation
                    each val in user.goals
                        p.body= val
        